package com.educacionit.jwa.backend.backend.jwa.repositories;

import java.util.ArrayList;
import java.util.List;

import com.educacionit.jwa.backend.backend.jwa.models.DirectorModel;
import com.educacionit.jwa.backend.backend.jwa.models.FilmModel;

public class DirectorDTO {
	private List<FilmModel>  movies = new ArrayList<>();
	private String name;
	private String lastname;
	private List<FilmModel> productions = new ArrayList<>();
	
	public DirectorDTO() {
		super();
	}

	public DirectorDTO(DirectorModel director) {
		super();
		this.name = director.getName();
		this.lastname = director.getLastname();
		this.productions = this.setProductions(director);
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public String getLastname() {
		return lastname;
	}

	public void setLastname(String lastname) {
		this.lastname = lastname;
	}

	public List<FilmModel> getProductions() {
		return productions;
	}

	public List<FilmModel> setProductions(DirectorModel director) {
		director.getproductions().forEach(e -> {
			var movie = e.getName();
			var gender = e.getGender();
			var film = new FilmModel(movie, gender);
			this.movies.add(film);
		});
		return this.productions = movies;
	}
	
	
	
}
