package com.educacionit.jwa.backend.backend.jwa.repositories;

import java.util.ArrayList;
import java.util.List;

import com.educacionit.jwa.backend.backend.jwa.models.DirectorModel;
import com.educacionit.jwa.backend.backend.jwa.models.FilmModel;

public class DirectorDTO {
	private String name;
	private String lastname;
	private String movie;
	private String gender;
	
	public DirectorDTO() {
		super();
	}

	public DirectorDTO(DirectorModel director) {
		super();
		this.name = director.getName();
		this.lastname = director.getLastname();
		director.getproductions().forEach(e -> {
		this.name = e.getName();
		this.gender = e.getGender();
		});
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public String getLastname() {
		return lastname;
	}

	public void setLastname(String lastname) {
		this.lastname = lastname;
	}

	public List<FilmModel> getProductions() {
		return productions;
	}

	public void setProductions(List<FilmModel> productions) {
		this.productions = productions;
	}
	
	
	
}
